<html>
    <!--/Product Details page-->
    <head>
        <title>Smart Boss</title>
        <%- include('./head.ejs') %>
    </head>
    <!--/body-->
    <body>
        <!--/navigation-bars to know more about the company, contact details, cart of the user and the product details of the selected product-->
        <main>
            <h3>Skills</h3>
            <% if(skills.length < 1) { %>
            <span>No skills created please create some</span>
            <% } else { %> <% skills.forEach(function(skill) {%>
            <span><%= skill.name %></span>
            <form action='/employer/group/skill' method='get'>
                <button value='<%= skill._id %>' name='skillID'>update</button>
            </form>
            <form action='/employer/group/skill' method='post'>
                <button value='<%= skill._id %>' name='skillID'>remove</button>
            </form>
            <% }); %> <% } %>
            <h3>Create A skill</h3>
            <form action="/employer/group" method="post">
                <label for="createSkill">
                    <span>Skill Name:</span>
                    <input type="text" id="name" name="name" />
                    <button>Create Skill</button>
                </label>
            </form>
        </main>
        <footer id="footer"></footer>
    </body>
</html>
